#!/bin/bash

readonly BINDIR=/scratch/lustre/home/kliment/voronota_esp/extbin

readonly OUTPUTDIR=$1
readonly INPUTFILE=$2

readonly TMPDIR=$(mktemp -d)

cp $INPUTFILE $TMPDIR/struct.pdb

cd $TMPDIR

$BINDIR/hbplus ./struct.pdb > /dev/null 2> /dev/null

mkdir -p $OUTPUTDIR/hbplus
mv ./struct.hb2 $OUTPUTDIR/hbplus/$(basename $INPUTFILE)

rm -r $TMPDIR
